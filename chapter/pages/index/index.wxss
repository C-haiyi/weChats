.menu{
  width: 100%;
  height: 80rpx;
  background:orangered;
  display: flex;
  align-items: center;
  position: relative;
}
.tt{
  position: fixed;
  top: 0;
}
.menu_list{
  width:120rpx;
  height: 80rpx;
  /* border: 1px solid red; */
  display: flex;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
  color: white;
}
.menu_list:active{
  font-size: 36rpx;
}
.menu>button{
  width: 120rpx;
  height: 80rpx;
  appearance: none;
  position: absolute;
  right: 0;
  background-color: orangered;
  display: flex;
  border: none;
  justify-content: center;
  align-items: center;
  
}
.menu>button>image{
  width: 50rpx;
  height: 50rpx;
}
.button{
  width: 100%;
  height: 80rpx;
  /* border: 1px solid red; */
  display: flex;
  align-items: center;
  margin-top: 100rpx;
}
.button_list{
  width: 100rpx;
  height: 40rpx;
  background-color: red;
  margin-left: 30rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 10rpx;
  color: white;
}

.list{
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.box{
  width: 100%;
  height:200rpx;
  /* border: 1px solid orange; */
  display: flex;
  justify-content: space-between;
  position: relative;
}
.box::after{
  content: '';
  display: inline-block;
  width: 100%;
  height: 3rpx;
  background-color: lightgray;
  position: absolute;
  bottom: 0;
}
.box_left{
  width: 60%;
  /* border: 1px solid black; */
}
.box_left>.title{
  font-size: 32rpx;
}
.box_left>.source{
  display: flex;
  font-size: 22rpx;
  color: lightgray;
  position: absolute;
  bottom: 10%;
  justify-content: space-between;
  width:400rpx ;
}

.box_right{
width:40% ;
}
.box_right>image{
  width: 100%;
  height: 90%;
}